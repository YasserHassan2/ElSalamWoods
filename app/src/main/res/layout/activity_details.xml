<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"></include>

    <ImageView
        android:id="@+id/prImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/doorfive"></ImageView>

    <TextView
        android:id="@+id/prName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:text="اسم المنتج"
        android:layout_marginTop="9dp"
        android:textColor="#000000"
        android:textSize="20dp"></TextView>

    <TextView
        android:id="@+id/prType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-light"
        android:layout_marginRight="5dp"
        android:text="نوع المنتج"
        android:layout_marginTop="19dp"
        android:textColor="#000000"
        android:textSize="20dp"></TextView>

    <TextView
        android:id="@+id/prDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-light"
        android:text="الوصـــــف"
        android:layout_marginTop="19dp"
        android:layout_marginRight="5dp"
        android:textColor="#000000"
        android:textSize="20dp"></TextView>

    <TextView
        android:id="@+id/prPrice"
        android:layout_width="190dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:layout_marginTop="19dp"
        android:text="السعــــر"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:background="@drawable/price_backgound"
        ></TextView>

    <Button
        android:id="@+id/btn_est3alm"
        android:layout_width="180dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="استعـــــــلام عن المنـــتج"
        android:textSize="18dp"
        android:layout_marginTop="19dp"
        android:textColor="@color/white"
        ></Button>



</LinearLayout>
</ScrollView>